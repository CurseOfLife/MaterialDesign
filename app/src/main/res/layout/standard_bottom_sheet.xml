<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/standard_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"

    android:clickable="true"
    app:behavior_hideable="true"
    app:behavior_peekHeight="112dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/view"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/swipe_up_indicator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_56"
                android:gravity="center_vertical"
                android:minHeight="@dimen/spacing_56"

                android:paddingStart="@dimen/spacing_16"
                android:paddingLeft="@dimen/spacing_16"
                android:paddingEnd="@dimen/spacing_16"
                android:paddingRight="@dimen/spacing_16"

                android:text="Corner CafÃ©"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/spacing_56"
                android:paddingStart="@dimen/spacing_16"
                android:paddingLeft="@dimen/spacing_16"
                android:paddingEnd="@dimen/spacing_16"
                android:paddingRight="@dimen/spacing_16"

                android:text="Coffee Shop"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="@dimen/spacing_48"
                    android:layout_marginEnd="@dimen/spacing_16"
                    android:layout_marginBottom="@dimen/spacing_8"

                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RatingBar
                        style="@style/Yellow.Small.AppCompatRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="@dimen/spacing_8"
                        android:numStars="5"
                        android:rating="2.3"

                        android:stepSize="0.5"
                        android:theme="@style/Yellow.Small.AppCompatRatingBar" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.3 (12)"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_300" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_48"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/spacing_56"
                    android:paddingLeft="@dimen/spacing_8"
                    android:text="25 min"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_24"
                            android:background="@android:color/transparent"
                            android:minWidth="@dimen/spacing_56"

                            android:minHeight="@dimen/spacing_56"
                            android:tint="@color/colorPrimaryDark"
                            app:srcCompat="@drawable/ic_location_on_white_24dp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"

                            android:text="71 Spooner Street , Quahog, RI "
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_800" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_24"
                            android:background="@android:color/transparent"
                            android:minWidth="@dimen/spacing_56"
                            android:minHeight="@dimen/spacing_56"

                            android:tint="@color/colorPrimaryDark"
                            app:srcCompat="@drawable/ic_phone_white_24dp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"

                            android:text="(1) 123-321"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_800" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/spacing_56"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_24"
                            android:background="@android:color/transparent"
                            android:minWidth="@dimen/spacing_56"
                            android:minHeight="@dimen/spacing_56"

                            android:tint="@color/colorPrimaryDark"
                            app:srcCompat="@drawable/ic_schedule_white_24dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_16"
                            android:layout_weight="1"
                            android:text="Mon, 9 AM - 22 PM"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/grey_800" />

                        <ImageButton
                            android:id="@+id/btn_toggle_schedule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:minWidth="@dimen/spacing_56"
                            android:minHeight="@dimen/spacing_56"
                            android:tint="@color/grey_700"
                            app:srcCompat="@drawable/ic_arrow_drop" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/expanded_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"

                        android:paddingTop="@dimen/spacing_4"
                        android:paddingBottom="@dimen/spacing_4"
                        android:paddingStart="@dimen/spacing_24"

                        android:layout_marginBottom="@dimen/spacing_16"
                        android:layout_marginEnd="@dimen/spacing_16"
                        android:layout_marginStart="56dp"

                        android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tue,  9 AM - 22 PM\nWed, 9 AM - 22 PM\nThu,  9 AM - 22 PM\nMon, 9 AM - 22 PM\nFri,     9 AM - 22 PM"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/grey_700"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:background="@color/grey_300" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"

                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_40"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:minHeight="@dimen/spacing_56"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center|end"
                            android:layout_marginEnd="@dimen/spacing_24"

                            android:background="@android:color/transparent"
                            android:tint="@color/colorPrimaryDark"
                            app:srcCompat="@drawable/ic_launch_white_24dp" />


                        <TextView
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:text="Website"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_40"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:minHeight="@dimen/spacing_56"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center|end"
                            android:layout_marginEnd="@dimen/spacing_24"

                            android:background="@android:color/transparent"
                            android:tint="@color/colorPrimaryDark"
                            app:srcCompat="@drawable/ic_playlist_add_white_24dp" />


                        <TextView
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Save"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_40"
                        android:layout_marginEnd="@dimen/spacing_8"
                        android:minHeight="@dimen/spacing_56"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center|end"
                            android:layout_marginEnd="@dimen/spacing_24"

                            android:background="@android:color/transparent"
                            android:tint="@color/colorPrimaryDark"
                            app:srcCompat="@drawable/ic_share_white_24dp" />


                        <TextView
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Share"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>
