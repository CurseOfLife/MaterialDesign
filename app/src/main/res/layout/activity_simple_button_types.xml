<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    android:orientation="vertical"
    tools:context=".activity.button.SimpleButtonTypes">

    <!-- home bar  -->
    <include
        android:id="@+id/home_bar"
        layout="@layout/home_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollingCache="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_16">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/spacing_16"
                android:orientation="horizontal"
                android:weightSum="2">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:layout_weight="0.6"
                    android:background="@color/grey_400" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Normal Buttons"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_400" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/spacing_16"
                    android:layout_weight="0.6"
                    android:background="@color/grey_400" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b1"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Text"
                        app:rippleColor="@color/yellow_600" />

                    <Button
                        android:id="@+id/b2"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Icon"
                        app:icon="@drawable/ic_favorite"
                        app:iconTint="@color/colorPrimaryDark"

                        />

                    <Button
                        android:id="@+id/b3"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Style"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                        android:textColor="@color/colorAccent"
                        app:rippleColor="@color/colorPrimaryLight" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/b4"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_4"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Outln"
                        app:rippleColor="@color/yellow_600"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="1dp" />

                    <Button
                        android:id="@+id/b5"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_4"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Outln"
                        app:icon="@drawable/ic_favorite"
                        app:rippleColor="@color/yellow_600"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="1dp" />


                    <Button
                        android:id="@+id/b6"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_4"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Outln"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                        android:textColor="@color/colorAccent"
                        app:rippleColor="@color/yellow_600"
                        app:strokeColor="@color/colorAccent"
                        app:strokeWidth="1dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_4"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Borderless"
                        android:textColor="@color/grey_700"
                        app:rippleColor="@color/yellow_600"
                        style="@style/Widget.AppCompat.Button.Borderless"
                       />

                    <Button
                        android:id="@+id/b8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_4"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Fill"
                        app:icon="@drawable/ic_favorite"
                        app:rippleColor="@color/yellow_600"
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        />

                    <Button
                        android:id="@+id/b9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_4"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="BORDCLR"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                        android:textColor="@color/green_500"
                        app:backgroundTint="@color/colorAccent"
                        app:rippleColor="@color/yellow_600"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="DISABLED" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_16"
                android:layout_marginBottom="@dimen/spacing_16"
                android:orientation="horizontal"
                android:weightSum="2">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:layout_weight="0.6"
                    android:background="@color/grey_400" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="A Few Custom Button Examples"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_400" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/spacing_16"
                    android:layout_weight="0.6"
                    android:background="@color/grey_400" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/play_button"
            style="@style/CustomPlayButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/play_button_selector"
            android:text="Play"
            android:textAppearance="@style/CustomPlayButton" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_4"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/play_button2"
                style="@style/CustomPlayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/play_button_selector"
                android:text="PLAY (disabbled)"
                android:textAppearance="@style/CustomPlayButton"
                android:enabled="false"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_4"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_switch_acc"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="switch account"
                android:textAllCaps="false"
                android:textColor="@color/textPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_16"
                android:layout_marginBottom="@dimen/spacing_16"
                android:orientation="horizontal"
                android:weightSum="2">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/spacing_16"
                    android:layout_weight="0.6"
                    android:background="@color/grey_400" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Image Buttons"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_400" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/spacing_16"
                    android:layout_weight="0.6"
                    android:background="@color/grey_400" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/spacing_80"
                    android:src="@drawable/image_button_selector"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hold your finger over the image button.\nDepending what state the button is \n(pressed or not in this case)\nthe image changes."
                    android:layout_weight="1"
                    />


            </LinearLayout>




        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>