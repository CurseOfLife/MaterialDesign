<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:dialogTheme">@style/Dialog.Theme</item>
        <item name="actionModeStyle">@style/ContextActionMode</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <!-- Dialog Theme -->
    <style name="Dialog.Theme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80ffffff</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="RippleStyleDark" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#80000000</item>
    </style>

    <!-- style for text -->
    <style name="TextAppearance.Medium.Bold" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>
    <!-- style for app compat rating bar-->

    <!-- style for rating bar -->
    <style name="Yellow.AppCompatRatingBar" parent="Base.Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/grey_800</item>
        <item name="colorControlActivated">@color/yellow_900</item>
    </style>

    <style name="Yellow.Small.AppCompatRatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/grey_800</item>
        <item name="colorControlActivated">@color/yellow_900</item>
    </style>
    <!-- style for rating bar -->

    <!-- Style for Bottom Modal Sheet -->
    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- Style for Bottom Modal Sheet -->

    <style name="ContextActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorAccent</item>
    </style>

    <!--Radio Button -->
    <style name="CustomRadioButton" parent="Theme.MaterialComponents.Light">
        <item name="colorControlNormal">#64dd17</item>
        <item name="colorControlActivated">@color/yellow_600</item>
        <item name="colorControlHighlight">#c51162</item>
        <item name="android:textColorPrimaryDisableOnly">#64dd17</item>
        <item name="android:textColor">@color/green_700</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
    <!--Radio Button-->

    <!--Switch -->
    <style name="CustomSwitch">
        <item name="tint">#64dd17</item>
        <item name="colorControlActivated">@color/colorAccentDark</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/amber_600</item>

        <!-- inactive track color-->
        <item name="android:colorForeground">@color/amber_600</item>
    </style>
    <!-- Switch -->

    <!-- Chip -->
    <style name="ChipTextApperance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- Chip -->

    <!-- Tab Layout -->
    <style name="TabLayout.Custom" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">@dimen/spacing_4</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabLayout.Text.Custom</item>
    </style>

    <!-- not selected text color and style, above we change the selected color -->
    <style name="TabLayout.Text.Custom" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>
    <!-- Tab Layout -->

    <!-- Base application theme. -->
    <style name="EditText.Purple" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/blue_700</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="CustomPlayButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">12dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

</resources>
